@model IEnumerable<OnlineStudyApplication.Models.Study>

@{
    ViewData["Title"] = "Add Study Material";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Study Material</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.ChapterName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.ChapterDescription)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.FileUpload)</a>
</th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Course)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterDescription)
            </td>
            <td>
                @if (item.FileUpload != null)
                {
                    @if (item.FileUpload != null)
                    {
                        <img src="~/img/file/@item.FileUpload" alt="Image not found" class="img-thumbnail" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
